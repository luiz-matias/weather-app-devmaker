<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:elevation="2dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDataPrevisao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/03"
            android:layout_gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="2dp"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textColor="@color/textColorPrimary"/>

        <TextView
            android:id="@+id/textViewDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuva fraca"
            android:layout_gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAppearance="@android:style/TextAppearance.Material.Body2"
            android:textColor="@color/textColorSecondary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTemperatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="48sp"
                    android:text="24"
                    android:paddingStart="16dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="8dp"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textColor="@color/textColorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:paddingTop="5dp"
                    android:text="Â°C"
                    android:layout_gravity="end"
                    android:textAppearance="@android:style/TextAppearance.Material.Body2"
                    android:textColor="@color/textColorSecondary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="2dp"
                android:paddingBottom="8dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewNuvens"
                        android:translationZ="2dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_cloud"
                        />

                    <TextView
                        android:id="@+id/textViewNuvens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="26"
                        android:textAppearance="@android:style/TextAppearance.Material.Title"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:text="%"
                        android:layout_gravity="end"
                        android:textAppearance="@android:style/TextAppearance.Material.Body2"
                        android:textColor="@color/textColorSecondary"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewChuva"
                        android:translationZ="2dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_rain"
                        />

                    <TextView
                        android:id="@+id/textViewUmidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:text="19"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Title"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:text="%"
                        android:layout_gravity="end"
                        android:textAppearance="@android:style/TextAppearance.Material.Body2"
                        android:textColor="@color/textColorSecondary"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>